{% extends 'base.html.twig' %}

{% block title %}Liste des utilisateurs{% endblock %}
{% block breadcrumb %}Utilisateurs{% endblock %}
{% block bouton %}
    <a href="{{ path('app_user_new') }}" class="btn btn-outline-primary">Ajouter un admin</a>
{% endblock %}
{% block body %}



    <table id="example" class="table table-striped table-bordered" style="width:100%">
        <thead class="thead-dark">
        <tr>
            <th scope="col">Nom</th>
            <th scope="col">Prénoms</th>
            <th scope="col">Email</th>
            <th scope="col">Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.nom }}</td>
                <td>{{ user.prenoms }}</td>
                <td>{{ user.email }}</td>
                <td>
                    <a href="{{ path('app_user_show', {'id': user.id}) }}" class="btn btn-info btn-sm">Voir</a>
                    <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4" class="text-center">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
