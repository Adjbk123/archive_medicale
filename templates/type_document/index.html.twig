{% extends 'base.html.twig' %}

{% block title %}Liste des Types de Documents{% endblock %}
{% block breadcrumb %}Types de Documents{% endblock %}
{% block bouton %}
    <a href="{{ path('app_type_document_new') }}" class="btn btn-primary">Créer un nouveau</a>

{% endblock %}

{% block body %}


        <table  id="example" class="table table-striped table-bordered" style="width:100%">
            <thead class="thead-dark">
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Libellé</th>
                <th scope="col">Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for type_document in type_documents %}
                <tr>
                    <td>{{ type_document.id }}</td>
                    <td>{{ type_document.libelle }}</td>
                    <td>
                        <a href="{{ path('app_type_document_show', {'id': type_document.id}) }}" class="btn btn-info btn-sm">Voir</a>
                        <a href="{{ path('app_type_document_edit', {'id': type_document.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3" class="text-center">Aucun enregistrement trouvé</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

{% endblock %}
