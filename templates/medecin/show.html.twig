{% extends 'base.html.twig' %}

{% block title %}Medecin{% endblock %}
{% block breadcrumb %}
   Médécins
{% endblock %}

{% block bouton %}
    <a class="btn btn-primary"  href="{{ path('app_medecin_index') }}">Retour à la liste</a>

{% endblock %}
{% block body %}

    <table class="table">
        <tbody>
            <tr>
                <th>Nom et prénoms</th>

                <td>{{ medecin.user.nom }} {{ medecin.user.prenoms }}</td>

            </tr>
            <tr>
                <th>Adresse email</th>

                <td>{{ medecin.user.email }} </td>

            </tr>
            <tr>
                <th>Specialite</th>
                <td>{{ medecin.specialite }}</td>
            </tr>
        </tbody>
    </table>


    {% if is_granted('ROLE_ADMIN') %}
        <div class="d-flex">
            <div class="me-3">
                <a class="btn btn-primary" href="{{ path('app_medecin_edit', {'id': medecin.id}) }}">Modifier</a>

            </div>
            <div>
                {{ include('medecin/_delete_form.html.twig') }}

            </div>

        </div>

    {% endif %}




{% endblock %}
