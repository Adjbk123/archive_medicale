{% extends 'base.html.twig' %}

{% block title %}Liste des médecins{% endblock %}
{% block breadcrumb %}Médecins{% endblock %}
{% block bouton %}
    <a href="{{ path('app_medecin_new') }}" class="btn btn-primary">Ajouter un médecin</a>
{% endblock %}
{% block body %}

    <div class="d-flex justify-content-end mb-3">
        <!-- Ajoute un espace pour d'autres boutons ou éléments au besoin -->
    </div>

    <table id="example" class="table table-striped table-bordered" style="width:100%">
        <thead class="thead-dark">
        <tr>
            <th scope="col">Nom & Prénoms</th>
            <th scope="col">Adresse email</th>
            <th scope="col">Spécialité</th>
            <th scope="col">Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for medecin in medecins %}
            <tr>
                <td>{{ medecin.user.nom }} {{ medecin.user.prenoms }}</td>
                <td>{{ medecin.user.email }}</td>
                <td>{{ medecin.specialite }}</td>
                <td>
                    <a href="{{ path('app_medecin_show', {'id': medecin.id}) }}" class="btn btn-info btn-sm">Voir</a>
                    <a href="{{ path('app_medecin_edit', {'id': medecin.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4" class="text-center">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
