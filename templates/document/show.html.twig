{% extends 'base.html.twig' %}

{% block title %}Document{% endblock %}
{% block breadcrumb %}Documents{% endblock %}
{% block bouton %}
    <a class="btn btn-primary" href="{{ path('app_document_index') }}">Retour Ã  la liste</a>
{% endblock %}

{% block body %}
    <table class="table table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ document.id }}</td>
            </tr>
            <tr>
                <th>DateDocument</th>
                <td>{{ document.dateDocument ? document.dateDocument|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Fichier</th>
                <td>{{ document.fichier }}</td>
            </tr>
        </tbody>
    </table>


    {% if is_granted('ROLE_ADMIN') %}
        <div class="d-flex">
            <div class="me-3">
                <a class="btn btn-primary" href="{{ path('app_document_edit', {'id': document.id}) }}">Modifier</a>

            </div>
            <div>
                {{ include('document/_delete_form.html.twig') }}

            </div>

        </div>

    {% endif %}




{% endblock %}
