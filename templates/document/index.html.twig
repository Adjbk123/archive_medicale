{% extends 'base.html.twig' %}

{% block title %}Liste des documents{% endblock %}

{% block breadcrumb %}Documents{% endblock %}

{% block bouton %}
    <a href="{{ path('app_document_new') }}" class="btn btn-primary">Créer un nouveau document</a>
{% endblock %}

{% block body %}


    <table id="example" class="table table-striped table-bordered" style="width:100%">
        <thead class="thead-dark">
        <tr>
            <th scope="col">Patient</th>
            <th scope="col">Date du Document</th>
            <th scope="col">Fichier</th>
            <th scope="col">Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for document in documents %}
            <tr>
                <td>{{ document.dossier.patient.user.nom }}
                    {{ document.dossier.patient.user.prenoms }}
                </td>
                <td>{{ document.dateDocument ? document.dateDocument|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ document.fichier }}</td>
                <td>
                    <a href="{{ path('app_document_show', {'id': document.id}) }}" class="btn btn-info btn-sm">Voir</a>
                    <a href="{{ path('app_document_edit', {'id': document.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4" class="text-center">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
